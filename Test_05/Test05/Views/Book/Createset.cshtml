@model Test05.viewsModel.modelBookShelflibrary

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassFrind</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatesetAdd" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div id="books-container">
                @for (int i = 0; i < Model.sizeset; i++)
                {
                        <div class="form-group">
                            <label asp-for="@Model.bookset[i].Title" class="control-label">Title</label>
                            <input asp-for="@Model.bookset[i].Title" class="form-control" />
                            <span asp-validation-for="@Model.bookset[i].Title" class="text-danger"></span>
                        </div>
                    <div class="book-item">
                        <h4>Book @i</h4>
                        <div class="form-group">
                            <label asp-for="@Model.bookset[i].height" class="control-label">Height</label>
                            <input asp-for="@Model.bookset[i].height" class="form-control" />
                            <span asp-validation-for="@Model.bookset[i].height" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.bookset[i].width" class="control-label">Width</label>
                            <input asp-for="@Model.bookset[i].width" class="form-control" />
                            <span asp-validation-for="@Model.bookset[i].width" class="text-danger"></span>
                        </div>
                    </div>
                }
                <h4>Group</h4>
                <div class="form-group">
                    <label asp-for="SelectedlibraryId" class="control-label">Select Group</label>
                    <select asp-for="SelectedlibraryId" class="form-control" asp-items="@(new SelectList(Model.library, "Id", "Name"))">
                        <option value="">-- Select a group --</option>
                    </select>
                    <span asp-validation-for="SelectedlibraryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Set" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
