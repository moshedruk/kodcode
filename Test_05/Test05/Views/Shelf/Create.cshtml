@model Test05.viewsModel.modelsLibraryShelf

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shelf</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Shelf.height" class="control-label"></label>
                <input asp-for="Shelf.height" class="form-control" />
                <span asp-validation-for="Shelf.height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shelf.width" class="control-label"></label>
                <input asp-for="Shelf.width" class="form-control" />
                <span asp-validation-for="Shelf.width" class="text-danger"></span>
            </div>


            @if (Model.library != null)
            {
                <h4>library</h4>

                <div class="form-group">
                    <label asp-for="SelectedlibraryId" class="control-label">Select Group</label>
                    <select asp-for="SelectedlibraryId" class="form-control" asp-items="@(new SelectList(Model.library, "Id", "Name"))">
                        <option value="">-- Select a group --</option>
                    </select>
                    <span asp-validation-for="SelectedlibraryId" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}